<view>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" class="banners" interval="{{interval}}" duration="{{duration}}">

        <block wx:for="{{v2ex}}">
            <swiper-item class="banner">
                <!-- <image src="{{item.image}}" data-id="{{item.b}}" bindtap="bindViewTap"
                class="banner-image" width="100%" height="100%" /> -->
                <text class="banner-title" data-title="{{item.title}}" data-url="{{item.url}}" data-content="{{item.content}}" data-author="{{item.member.username}}" bindtap="bindViewTap">
                    {{item.title}}
                </text>
            </swiper-item>
        </block>
    </swiper>
</view>

<view wx:for="{{v2exLatest}}" class="news_list" data-title="{{item.title}}" data-url="{{item.url}}" data-content="{{item.content}}" data-author="{{item.member.username}}" bindtap="bindViewTap">

    <text class="banner-title">
        {{item.title}} ({{item.member.username}})
    </text>
</view>