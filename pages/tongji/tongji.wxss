.container {
    /* height: 100%; */
    height: 100vh;
    display: flex;
    flex-direction: column;

    box-sizing: border-box;
    -webkit-text-size-adjust: none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica, Arial, "Helvetica Neue", "Droid Sans", "Microsoft YaHei", sans-serif;
}

.canvas {
    width: 100%;
    height: 200px;
}

.first {
    height: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* 垂直方向上居中 */
    align-items: center;
    /* 水平方向上居中 */
}

.first .text {
    font-size: 24rpx;
    margin: 20rpx;
}

.big-button {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 80rpx;
    text-align: center;
    text-decoration: none;
    font-size: 24rpx;
    margin: 20rpx;
    width: 30%;
    border-radius: 50%;
    /* 使按钮变成圆形 */
    box-shadow: 0 2px 5px rgba(0, 0, 0, .26);
    /* 添加阴影效果 */
    transition: box-shadow 0.3s ease;
    /* 添加过渡动画效果 */

}

.big-button:hover {
    transform: scale(1.2);
    /* 鼠标悬停时，将按钮放大 1.2 倍 */
    box-shadow: 0 5px 10px rgba(0, 0, 0, .26);
    /* 鼠标悬停时加深阴影效果 */
    /* 鼠标悬停时，加强阴影效果 */
}

.small-button {
    background-color: #f44336;
    border: none;
    color: white;
    padding: 10rpx;
    text-align: center;
    text-decoration: none;
    font-size: 16rpx;
    margin: 10rpx;
    width: 20%;
}

.left-right {
    display: flex;
    flex-direction: row;
    height: 100%;
}

.left {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}

.left-text {
    font-size: 16rpx;
    margin: 10rpx;
}

.right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}

.right-text {
    font-size: 16rpx;
    margin: 10rpx;
}

.second {
    height: 45%;
    display: flex;
    flex-direction: column;
}

.second .text {
    font-size: 24rpx;
    margin: 20rpx;
}

.chart {
    height: 100%;
    background-color: #eee;
    display: flex;
    justify-content: center;
    align-items: center;
}

.chart image {
    max-height: 100%;
    max-width: 100%;
}