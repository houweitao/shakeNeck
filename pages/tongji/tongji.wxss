.container {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.first {
    height: 50%;
    display: flex;
    flex-direction: column;
}

.first .text {
    font-size: 24rpx;
    margin: 20rpx;
}

.big-button {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 20rpx;
    text-align: center;
    text-decoration: none;
    font-size: 24rpx;
    margin: 20rpx;
    width: 100%;
}

.small-button {
    background-color: #f44336;
    border: none;
    color: white;
    padding: 10rpx;
    text-align: center;
    text-decoration: none;
    font-size: 16rpx;
    margin: 10rpx;
    width: 100%;
}

.left-right {
    display: flex;
    flex-direction: row;
    height: 100%;
}

.left {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}

.left-text {
    font-size: 16rpx;
    margin: 10rpx;
}

.right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}

.right-text {
    font-size: 16rpx;
    margin: 10rpx;
}

.second {
    height: 50%;
    display: flex;
    flex-direction: column;
}

.second .text {
    font-size: 24rpx;
    margin: 20rpx;
}

.chart {
    height: 100%;
    background-color: #eee;
    display: flex;
    justify-content: center;
    align-items: center;
}

.chart image {
    max-height: 100%;
    max-width: 100%;
}